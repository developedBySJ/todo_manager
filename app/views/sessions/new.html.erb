<main class="Container UserMainPage">
  <section class= "UserNew">
    <p class="UserNew-title" >Sign In</p>
    <%= form_with url: sessions_path do |form| %>
      <div class="Form-section" >
        <p class="Form-label" >Email :</p>
        <%= form.email_field :email, class: "Form-input User-input" %>
      </div>
      <div class="Form-section" >
        <p class="Form-label" >Password :</p>
        <%= form.password_field :password, class: "Form-input User-input" %>
      </div>
      <div class="Form-section" >
        <%= form.submit "Sign In!", class: "Btn Btn-primary User-submit" %>
      </div>
    <% end %>
  </section>  
</main>